{
  "name": "mxvoice",
  "productName": "Mx. Voice",
  "version": "3.2.0",
  "description": "Improv Audio Software",
  "repository": "https://github.com/minter/mxvoice-electron",
  "main": "src/index.js",
  "keywords": [],
  "author": {
    "name": "H. Wade Minter",
    "email": "wade@wademinter.com"
  },
  "scripts": {
    "start": "electron .",
    "build:mac:arm64": "electron-builder --mac --arm64",
    "build:mac:x64": "electron-builder --mac --x64",
    "release": "electron-builder --mac --publish always",
    "release:universal": "node build/release-universal.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build:win": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "app.mxvoice.mxvoice",
    "productName": "Mx. Voice",
    "copyright": "Copyright Â© 2025 Wade Minter and Andrew Berkowitz",
    "afterSign": "build/notarize.js",
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": true,
    "electronDist": "node_modules/electron/dist",
    "asar": true,
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "afterPack": "build/afterPack.js",
    "afterAllArtifactBuild": "build/windowsSign.js",
    "mac": {
      "forceCodeSigning": true,
      "artifactName": "Mx. Voice-${version}-${arch}.${ext}",
      "category": "public.app-category.music",
      "icon": "src/assets/icons/mxvoice",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "identity": "E31B13B9566B95D1BC1F46F0C3B2FA6C739356CB",
      "provisioningProfile": null,
      "notarize": false,
      "target": [
        {
          "target": "dmg"
        },
        {
          "target": "zip"
        }
      ]
    },
    "dmg": {
      "icon": "src/assets/icons/dmg-image.icns",
      "background": "src/assets/images/dmg-background-image.png",
      "contents": [
        {
          "x": 180,
          "y": 340
        },
        {
          "x": 450,
          "y": 340,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "sign": false
    },
    "win": {
      "icon": "src/assets/icons/mxvoice.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "minter",
        "repo": "mxvoice-electron"
      }
    ]
  },
  "license": "MIT",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@fortawesome/fontawesome-free": "^5.15.4",
    "@octokit/rest": "^21.0.2",
    "animate.css": "^4.1.1",
    "axios": "^0.30.0",
    "better-sqlite3": "^11.10.0",
    "bootstrap": "^4.6.0",
    "electron-log": "^5.4.0",
    "electron-prompt": "^1.7.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.1",
    "electron-updater": "^6.6.2",
    "electron-util": "^0.17.0",
    "howler": "^2.2.3",
    "jquery": "^3.6.0",
    "jquery-contextmenu": "^2.9.2",
    "lodash": "^4.17.21",
    "markdown-it": "^14.1.0",
    "mousetrap": "^1.6.5",
    "music-metadata": "8.1.3",
    "n-readlines": "^1.0.1",
    "popper.js": "^1.14.4",
    "uuid": "^8.3.2",
    "wavesurfer.js": "^7.10.1",
    "yarn": "^1.22.22"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "electron": "^22.3.27",
    "electron-builder": "24.13.3",
    "electron-builder-notarize": "^1.2.0",
    "electron-reload": "^1.5.0",
    "node-abi": "3.75.0"
  }
}